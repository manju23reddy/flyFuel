<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:paddingTop="20dip"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/registerPhoneETxt"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerPhoneBtn"
            android:text="@string/get_validation_code"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/codeLyt"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:id="@+id/code1ETxt"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:id="@+id/code2ETxt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:id="@+id/code3ETxt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:id="@+id/code4ETxt"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="15sp"
                android:layout_margin="5dip"
                android:id="@+id/code5ETxt"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/validate_code"
            android:id="@+id/validateCodeBtn"
            android:layout_below="@+id/codeLyt"/>


    </RelativeLayout>

</RelativeLayout>
